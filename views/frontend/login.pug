extends layouts/app
block content
  .container
    .row
      .col-sm-6.offset-sm-3
        .box-card
          .card
            .card-header.box-white
              h1.title-sign Đăng nhập
            .card-block
              - if(error && error == 'validate'){
                .alert.alert-danger
                  span Email hoạc mật khẩu không đúng
              - }
              form(action="" method="post")
                .form-group
                  label Số điện thoại
                    span.required *
                  input(type="tel" name="phone" class="form-control")
                .form-group
                  label Mật khẩu
                    span.required *
                  input(type="password" name="password" class="form-control")
                .form-group
                  button(type="submit" name="login" class="btn btn-primary btn-block") Đăng nhập
